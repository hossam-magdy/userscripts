{
  "name": "IMDB info Extension",
  "description": "IMDB info + .torrent from magnet.user",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  // "background": { "service_worker": "background.js" },
  "permissions": ["storage", "activeTab", "scripting"],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "MacCtrl+Shift+F"
      },
      "description": "Opens imdb-info.html"
    }
  }
}
